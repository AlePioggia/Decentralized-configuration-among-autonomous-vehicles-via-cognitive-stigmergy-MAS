mas unit_tests {

    agent test_runner: test-runner.asl{
        focus: main.trafficEnv, main.light1, main.light2
    }

    agent test_vehicle: test-probable_vehicle.asl{
        focus: main.trafficEnv, main.light1, main.light2
    }

    workspace main {
        artifact trafficEnv: traffic.TrafficEnvironment
        artifact light1: traffic.TrafficLight(2, 1)
        artifact light2: traffic.TrafficLight(2, 2)
    }

    asl-path: "src/test/agt"
}